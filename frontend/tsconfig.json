{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve", // Si usas Next.js, usa "preserve". Si no, usa "react".
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@utils/*": ["./utils/*"],
      "@/componentes/*": ["src/componentes/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.js",
    "utils/api.ts"
  ],
  "exclude": ["node_modules"]
}